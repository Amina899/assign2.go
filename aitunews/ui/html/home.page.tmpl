{{template "base" .}}

{{define "title"}}Home{{end}}

{{define "main"}}
    <h2>Latest News</h2>
    {{if .Newses}}
     <table>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Created</th>
            <th>ID</th>
        </tr>
        {{range .Newses}}
        <tr>
            <td><a href='/news/{{.ID}}'>{{.Title}}</a></td>
             <td>{{.Author}}</td>
             <td>{{humanDate .Created}}</td>
            <td>#{{.ID}}</td>
        </tr>
        {{end}}
    </table>
    {{else}}
        <p>There's nothing to see here... yet!</p>
    {{end}}
{{end}}